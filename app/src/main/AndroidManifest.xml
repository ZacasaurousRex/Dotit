<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pullstartstudios.dotit" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SpeedRound"
            android:label="@string/title_activity_speed_round"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pullstartstudios.dotit.HomeScreen" />
        </activity>
        <activity
            android:name=".DontTouch"
            android:label="@string/title_activity_dont_touch"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pullstartstudios.dotit.HomeScreen" />
        </activity>
        <activity
            android:name=".FasterAndFaster"
            android:label="@string/title_activity_faster_and_faster" >
        </activity>
    </application>

</manifest>
